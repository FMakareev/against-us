{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es2017",
      "module": "commonjs",
      "outDir": "./build",
      "baseUrl": "./src",
      "alwaysStrict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  